
{{#noticias}}
    <tr>
        <td><i class="text-info mdi mdi-note-outline d-inline pr-2 fs-3"></i>{{id}}</td>
        <td>{{seccion}}</td>
        <td class="max-with-250 text-elipsis">{{titulo}}</td>
        <td>{{create_at}}</td>
        <td>
            {{#update_at}}
                {{update_at}}
            {{/update_at}}
            {{^update_at}}
                no publicado
            {{/update_at}}
        </td>
        <td>
            <label class="badge badge-state-{{idEstado}} me-1"  id="label-{{id}}">{{estado}}</label>
        </td>

        <td>

            <a  class="btn btn-secondary" title="Previsualizar"  href="/infonete/articulo/preview?id={{id}}" ><i class="mdi mdi-eye mx-auto" ></i> RevsarNota</a>

        </td>
    </tr>
{{/noticias}}

{{^noticias}}
    <tr>
        <td>
            No hay Notas para mostrar.
        </td>

    </tr>

{{/noticias}}
