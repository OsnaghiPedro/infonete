<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <link rel="stylesheet" href="/infonete/public/css/index/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="/infonete/public/css/app/global.css">
    <link rel="stylesheet" href="/infonete/public/css/style.css">

    <link rel="shortcut icon" href="/infonete/public/images/logo/favicon.png"/>

    <title>Editar Sección</title>
</head>
<body>

<div class="container-scroller">
    <!-- partial:partial/sidebar.mustache -->
    {{>sidebar}}
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
        <!-- partial:partial/main-navbar.mustache -->
        {{>main-navbar}}
        <!-- partial -->

        <!-- main panel -->
        <div class="main-panel">
            <div id="main-content" class="content-wrapper">
                <!-- form: Nuevo producto -->
                <div class="card fadeIn">

                    <div class="card-body">

                        <div class="container max-with-600 mx-auto">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4>Editar Sección</h4>
                                <a class="btn btn-secondary text-center" title="Cerrar ventana" href="/infonete/seccion/admin"><i class="mdi mdi-close d-inline mx-auto"></i></a>
                            </div>
                            <hr class="bg-dark-gray">
                            {{#seccion}}


                            <form action="/infonete/seccion/actualizar?id={{getId}}" method="post" >



                                    <div class="d-flex flex-column w-100">

                                          <div class="w-100">
                                              <label>Nombre de la Sección *</label>
                                              <input class="form-control mb-2" type="text" name="nombre" onkeyup="this.value = this.value.toUpperCase();" value="{{getNombre}}" placeholder="Nombre" required>
                                          </div>



                                        <label>Descripción *</label>
                                        <textarea class="form-control mb-2" rows="4" maxlength="255" name="descripcion" placeholder="Describa la Sección" required>{{getDescripcion}}</textarea>


                                    </div>








                                <div class="d-flex justify-content-end mt-2">
                                    <button class="btn btn-primary mb-2" type="submit">Actualizar</button>
                                </div>

                                {{#success}}
                                    <div class="alert alert-success" role="alert">
                                        {{success}}
                                    </div>
                                {{/success}}

                                {{#error}}
                                    <div class="alert alert-danger" role="alert">
                                        {{error}}
                                    </div>
                                {{/error}}


                            </form>
                            {{/seccion}}

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- main-panel ends -->
    </div>
</div>


<script src="/infonete/public/js/vendors/jquery-1.11.3.min.js"></script>
<script src="/infonete/public/js/vendors/js/vendor.bundle.base.js"></script>
<script src="/infonete/public/js/vendors/settings.js"></script>
<script src="/infonete/public/js/vendors/hoverable-collapse.js"></script>
<script src="/infonete/public/js/vendors/misc.js"></script>
<script src="/infonete/public/js/vendors/off-canvas.js"></script>
<!--script vistas Infonete -->


<script type='text/javascript' src="/infonete/public/js/app/preview.js"></script>


</body>
</html>


