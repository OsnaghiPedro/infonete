<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/infonete/public/css/bootstrap.css">
    <link rel="stylesheet" href="/infonete/public/css/global.css">
    <title>Crear Archivo</title>
</head>
<body>
<h2>Crear Archivo</h2>
<form action="/infonete/archivo/guardar" method="post">
    <input class="form-control mb-2" type="text" name="nombre" placeholder="Nombre">
    <input class="form-control mb-2" type="text" name="size" placeholder="TamaÃ±o">
    <input class="form-control mb-2" type="text" name="tipo_archivo" placeholder="Tipo de Archivo">
    {{#success}}
        <div class="alert alert-success" role="alert">
            {{success}}
        </div>
    {{/success}}

    {{#error}}
