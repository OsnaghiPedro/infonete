<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <link rel="stylesheet" href="public/css/index/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="public/css/style.css">
    <link rel="shortcut icon" href="public/images/logo/favicon.png"/>

    <title>Inicio</title>
</head>
<body>

<div class="container-scroller fadeIn">
    <!-- partial:partial/sidebar.mustache -->
    {{>sidebar}}
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
        <!-- partial:partial/main-navbar.mustache -->
        {{>main-navbar}}
        <!-- partial -->

        <!-- main panel -->
        <div class="main-panel">
            <div id="main-content" class="content-wrapper">


                <!-- Aqui todo el contenido -->

                <!-- CONTENIDO - HOME -->
                <div class="card">
                    <div class="card-body">
                        <!-- Banner suscripciones -->
                        <div class="row">
                            <div class="col-12 grid-margin stretch-card">
                                <div class="card corona-gradient-card">
                                    <div class="card-body py-0 px-0 px-sm-3">
                                        <!-- publicidad suscripcion -->

                                        <div class="row align-items-center">
                                            <div class="col-4 col-sm-3 col-xl-2">
                                                <img src="/infonete/public/images/banner/Group126@2x.png"
                                                     class="gradient-corona-img img-fluid" alt="">
                                            </div>
                                            <div class="col-5 col-sm-7 col-xl-8 p-0">
                                                <h4 class="mb-1 mb-sm-0">Queres mantenerte al día?</h4>
                                                <p class="mb-0 font-weight-normal d-none d-sm-block">Tenémos los mejores
                                                    Planes para vos!</p>
                                            </div>
                                            <div class="col-3 col-sm-2 col-xl-2 pl-0 text-center">
                                                <span>
                                                  <a id="btn-banner-planes" href="/infonete/suscripcion/planes"
                                                     class="btn btn-outline-light btn-rounded get-started-btn">Comprar suscripción</a>
                                                </span>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- seccion novedades -->

                        <div class="row">
                            <h3 class="col-12 text-left text-light-gray">Ultimos lanzamientos</h3>

                            <div class="d-flex flex-wrap w-100 mx-auto justify-content-center justify-content-lg-start">

                                <div class="card card-max bg-light-gray shadow-max">
                                    <div class="card-img p-0 overflow-hidden">
                                        <div class=" bg-light pt-4 pb-2 mb-2">
                                            <img class="mx-auto portada mb-2 d-block shadow"
                                                 src="/infonete/public/uploads/portada/caras.jpg" alt="">
                                            <spam class="tag-tipo">REVISTA</spam>
                                        </div>
                                        <div class="d-flex flex-column px-2">

                                            <h4 class="font-weight-bolder mb-0 me-1 text-dark-gray">Revista Caras</h4>


                                            <div class="d-flex ">
                                                <small class="text-muted pr-2">01-nov-2022</small> <small
                                                    class="text-muted">Ed.: 3445</small>

                                            </div>


                                            <p class="text-gray mt-2">Lorem ipsum dolor sit amet, consectetur
                                                adipisicing elit. Ad adipisci at, consequuntur enim, eos et fugit!</p>
                                            <h3 class="mb-0 text-dark-gray">$17.34</h3>
                                            <a class="btn btn-primary btn-block" href="">Comprar este número</a>
                                        </div>

                                        <div class="w-100 card-tipo-border">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- main-panel ends -->
        </div>

    </div>


    <script src="public/js/vendors/jquery-1.11.3.min.js"></script>
    <script src="public/css/index/vendors/js/vendor.bundle.base.js"></script>
    <script src="public/js/vendors/settings.js"></script>
    <script src="public/js/vendors/hoverable-collapse.js"></script>
    <script src="public/js/vendors/misc.js"></script>
    <script src="public/js/vendors/off-canvas.js"></script>
    <!--script vistas Infonete -->

